<h2 id ="review_info">Review: <%= @review.author %></h2>
<h3 id ="review_info">Product: <%= @product.name %></h3>
<h3 id ="review_info"><%= @review.rating %> out of 5</h3>
<h4 id ="review_info"><%= @review.content_body %></h4>

<% if current_user.admin && current_user%>
<p><%= link_to "Edit review", edit_product_review_path(@product, @review) %></p>

<p><%= link_to "Delete review", product_review_path(@product, @review),
  :data => {:confirm => "Are you sure?",
  :method => "delete"} %></p>
  <% end %>
  <p><%= link_to "Return to product", product_path(@product) %></p>
